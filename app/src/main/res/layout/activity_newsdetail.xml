<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tv_appbarlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="#61e9b0"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/tv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y240"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                >
                <ImageView
                    android:background="@null"
                    android:id="@+id/back_view"
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:enabled="false"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/at_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x15"
                    tools:text="05-24 10:20"/>

                <TextView
                    android:id="@+id/at_fromname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@id/at_time"
                    android:textSize="@dimen/x15"
                    tools:text="新浪娱乐"/>

                <TextView
                    android:id="@+id/at_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/at_time"
                    android:layout_marginTop="@dimen/y10"
                    android:textColor="#000"
                    android:textSize="@dimen/x25"
                    />

                <TextView
                    android:id="@+id/at_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/at_title"
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="#382b2b"
                    tools:text="奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了奥特曼怀孕了"/>

                <TextView
                    android:id="@+id/at_share_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/at_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y35"
                    android:text="------分享到------"
                    android:textSize="@dimen/x20"/>

                <ImageView
                    android:id="@+id/at_shareqq"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/y70"
                    android:layout_below="@id/at_share_txt"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y30"
                    android:src="@drawable/qq"/>
                <ImageView
                    android:id="@+id/at_sharesina"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/y70"
                    android:layout_below="@id/at_share_txt"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y30"
                    android:src="@drawable/sina"/>
                <ImageView
                    android:id="@+id/at_sharewechat"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/y70"
                    android:layout_below="@id/at_share_txt"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/y30"
                    android:src="@drawable/wechat"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y67">
        <EditText
            android:layout_marginLeft="@dimen/x25"
            android:id="@+id/at_rcount"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="@dimen/y8"
            android:textSize="@dimen/y20"
            android:hint="我也来说两句..."
            android:editable="false"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/x380"
            android:layout_height="@dimen/y50"/>
        <TextView
            android:id="@+id/at_count"
            android:layout_alignBaseline="@+id/at_rcount"
            android:text="10"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/at_rcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/at_qipao"
            android:layout_alignTop="@id/at_rcount"
            android:src="@drawable/rcount"
            android:layout_toRightOf="@id/at_count"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"/>
        <View
            android:layout_marginBottom="@dimen/y8"
            android:background="#9e9d9d"
            android:layout_above="@id/at_rcount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            />
    </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>